# Database Configuration
# PostgreSQL connection string (Supabase, Neon, Railway, or local)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/fiber_service_mapper"

# Direct connection URL for Prisma CLI migrations
# For Supabase: use the direct connection (port 5432), not the pooler
# For local PostgreSQL: set this to the same value as DATABASE_URL
DIRECT_URL="postgresql://postgres:password@localhost:5432/fiber_service_mapper"

# Application Configuration
# Base URL for the application (change for production deployment)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_REFERRAL_URL="https://refer.omnifiber.com/multimediality"

# Environment
# Set to "development" for local dev, "production" for deployed environments
NODE_ENV="development"

# Optional: Custom port for development server
# PORT=3000

# Batch Processing Configuration
# BATCH_DELAY_MS=250       # Minimum delay between API requests (ms)
# BATCH_MAX_IN_FLIGHT=10   # Maximum concurrent API requests
# BATCH_STATUS_POLL_MS=1000 # How often to poll job status (ms)
